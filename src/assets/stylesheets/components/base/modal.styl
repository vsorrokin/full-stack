.modal
  trans-visible()
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1000
  overflow-y: auto
  -webkit-overflow-scrolling: touch
  display: flex
  .overlay
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: rgba($color-black, .61)
.modal-content-wrap
  width: 760px
  display: block
  margin: auto
  position: relative
  padding: 50px 20px
  .default-modal-content
    background-color: $color-white
    border-radius: 11px
    box-shadow: $box-shadow rgba($color-black, .1)
    padding: 20px
    position: relative
    .close
      position: absolute
      right: 10px
      top: 10px
      padding: 10px
      margin: 0
      background-color: transparent
      line-height: 1
      border: none
      font-size: 12px
      outline: none
      &:after
        content: icon-close
        font-family: icomoon


html.disable-scroll
  width: 100%
  height: 100%
  overflow: hidden
  body
    width: 100%
    height: 100%
    overflow: hidden
