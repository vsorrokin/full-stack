.checkboxes
  padding-top: 7px
  .checkbox
    margin-right: 15px
    &:last-child
      margin-right: 0

.checkbox
  position: relative
  .label-text
    color: $color-text
    font-weight: 500
    font-size: 17px
  .checkbox-emulator
    width: 19px
    height: @width
    border: 1px solid $color-border-checkbox
    border-radius: 4px
    display: inline-block
    margin-right: 8px
    background-color: transparent
    trans('background-color, border-color, color')
  .icon-check
    font-size: 8px
    font-weight: 700
    left: 3px
    bottom: 2px
    position: relative
    opacity: 0
    color: $color-white
    trans('opacity')
  input[type=checkbox]
    opacity: 0
    position: absolute
    width: 100%
    height: 100%
    left: 0
    top: 0
    z-index: 1
    cursor: pointer
    &:checked + .checkbox-emulator
      border-color: $color-base
      background-color: $color-base
      .icon-check
        opacity: 1


.latch-checkbox
  position: relative
  display: inline-block

  &.checkbox-block
    display: block
    .checkbox-emulator
      float: right
    cursor: pointer
    label
      clearfix()
      cursor: pointer
  .label-text
    display: inline-block
    float: left
    font-size: 18px
    line-height: 15px
    font-weight: 400
    margin-right: 10px
  .checkbox-emulator
    display: inline-block
    width: 41px
    height: 100%
    background-color: $color-border
    border-radius: 14px
    .icon-check
      &:before
        display: none
    .latch
      width: 14px
      height: 100%
      background-color: $color-base
      border-radius: 14px
      clearfix()
      trans('width')
      i
        float: right
        width: 14px
        height: 14px
        background-color: $color-white
        border-radius: 100%
        display: block
        position: relative
        box-shadow: 0 2px 4px 0 rgba($color-black, .06)

  input[type=checkbox]
    opacity: 0
    position: absolute
    width: 41px
    height: 100%
    right: 0
    top: 0
    z-index: 1
    cursor: pointer
    &:checked + .checkbox-emulator
      .latch
        width: 100%
