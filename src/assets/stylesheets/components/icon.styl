.bordered-icon
  width: 43px
  height: @width
  border-radius: @width
  background-color: $color-white
  box-shadow: 0 1px 11px 0 $color-shadow-grey
  text-align: center

  i
    color: $color-base
    font-size: 20px
    display: inline-block
    vt-middle()

    &.icon-arrow_left
      left: -1px
      top: calc(50% - 1px)

  .icon-arrow_right_long
    font-size: 16px


.wrap-icon
  color: $color-base
  i
    font-size: 19px
