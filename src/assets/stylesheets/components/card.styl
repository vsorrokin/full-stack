.card-wrap
  width: 320px
  padding-top: (100 / $card-ratio)%
  position: relative
  cursor: pointer

.card
  width: 100%
  height: 100%
  position: absolute
  top: 0
  left: 0

  .image, .shadow
    bg-cover()
    width: 100%
    height: 100%

  .image-wrap, .shadow-wrap
    height: 100%
    will-change: transform
    backface-visibility: hidden
    transition: transform 4000ms cubic-bezier(0.03, 0.98, 0.52, 0.99) 0s
    position: relative
    z-index: 1

  .shadow-wrap
    width: 100%
    position: absolute
    top: 1vw
    left: 1vw
    filter: blur(2vw)
    opacity: .7
    z-index: 0
