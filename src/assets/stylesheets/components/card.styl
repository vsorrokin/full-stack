.card
  width: 360px
  height: 580px
  position: relative
  cursor: pointer

  .image, .shadow
    height: 100%
    bg-cover()
    background-image: url(img-url('card.jpg'))
    will-change: transform
    backface-visibility: hidden
    transition: all 4000ms cubic-bezier(0.03, 0.98, 0.52, 0.99) 0s
    position: relative
    z-index: 1

  .shadow
    width: 100%
    position: absolute
    top: 40px
    left: 40px
    filter: blur(30px)
    opacity: .7
    z-index: 0
