.pay-send-block
  $gap = 8px

  clearfix()
  margin: 0 (-($gap/2))
  .left, .right
    float: left
    width: 50%
    padding: ($gap/2)

    @media(max-width: 850px)
      width: 100%

  .pay-send-box
    height: 208px

  .top-up-box, .receive-box
    height: 100px

  .top-up-box
    margin-bottom: $gap
