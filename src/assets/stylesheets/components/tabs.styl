.main-tabs
  display: flex
  button
    color: $color-base
    font-size: 20px
    background-color: $color-white
    padding: 13px 11px
    border-radius: 8px
    position: relative
    flex-grow: 1
    .wrapper
      position: relative
      display: inline

    span
      trans('opacity')
    span.inactive
      font-weight: 500
      position: absolute
      top: -1px
      left: 0.05em

    span.active
      font-weight: 700
      opacity: 0

    &.active, &:hover
      background-color: $color-btn-space

    &.active
      span.active
        opacity: 1
      span.inactive
        opacity: 0


.sub-tabs
  button
    border-bottom: 2px solid transparent
    trans('border-color, opacity')
    padding: 0px 10px
    padding-bottom: 13px
    margin-right: 7px
    opacity: .5
    &.active
      border-color: $color-text
      opacity: 1
    &:hover
      opacity: .7
