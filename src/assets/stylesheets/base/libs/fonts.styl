icomoonfont(postfix = 'kuydrw', path = 'icomoon')
  family = 'icomoon'
  @font-face
    font-family family

    src: url(font-url(path + '.eot?-' + postfix))
    src: url(font-url(path + '.eot?#iefix-' + postfix)) format('embedded-opentype'),
         url(font-url(path + '.woff2?-' + postfix)) format('woff2'),
         url(font-url(path + '.woff?-' + postfix)) format('woff'),
         url(font-url(path + '.ttf?-' + postfix)) format('truetype'),
         url(font-url(path + '.svg?-' + postfix + '#'+ family)) format('svg')

    font-weight normal
    font-style normal

  [class^="icon-"], [class*=" icon-"]
  	font-family: family !important;
  	speak: none;
  	font-style: normal;
  	font-weight: normal;
  	font-variant: normal;
  	text-transform: none;
  	line-height: 1;

  	-webkit-font-smoothing: antialiased;
  	-moz-osx-font-smoothing: grayscale;
