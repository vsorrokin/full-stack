// Accordingly to this note http://www.webtype.com/info/articles/fonts-weights/

webfont($main-font-family, 'Rajdhani-Regular', 400, normal)

webfont($title-font-family, 'MajorMonoDisplay-Regular', 400, normal)

h1, h2, h3, h4, h5, h6, p
  margin: 0
  padding: 0

h1
  font-size: 50px
  font-weight: 500

h3
  font-size: 30px
  font-weight: 500

h4
  font-size: 22px
  letter-spacing: -0.01em
  word-spacing: -0.04em
  font-weight: 500

h5
  font-size: 20px
  font-weight: 700
  margin-bottom: 3px

.small-title
  font-size: 13px
  opacity: .5

.break-all
  word-break: break-all

.upper-title
  font-size: 12px
  text-transform: uppercase
  opacity: .5
  margin-bottom: 15px
  padding-left: 20px
  letter-spacing: 0.08em

.break-all
  word-break: break-all

icomoonfont()

.icon-telegram:before
  content: "\e900"

.icon-instagram:before
  content: "\e901"
