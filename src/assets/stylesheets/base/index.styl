@import 'libs/normalize'
@import 'libs/mixins'
@import 'libs/fonts'

@import 'typography'

*, *:after, *:before
  box-sizing: border-box

body
  font-family: $main-font-family, 'Helvetica', 'Arial'
  font-weight: 500
  font-size: 15px
  line-height: 1.25
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  letter-spacing: normal
  color: $color-text
  background-color: $color-body-bg

html.disable-scroll
  width: 100%
  height: 100%
  overflow: hidden
  body
    width: 100%
    height: 100%
    overflow: hidden

// Links
a
  text-decoration: none
  color: inherit

// Lists
ul
  margin: 0
  padding: 0
  list-style-type: none
