#!/bin/bash

source ./bin/data/env

mutagen_project_file='./development/mutagen/base.yml'

# Register shutdown handler
function gracefulShutdown ()
{
  mutagen project terminate -f "${mutagen_project_file}"
  exit 2
}
trap "gracefulShutdown" 2


mutagen project start -f "${mutagen_project_file}" || mutagen project terminate -f "${mutagen_project_file}"
#python -m webbrowser -t "https://localhost:${PORT}"
mutagen project run logs -f "${mutagen_project_file}"
