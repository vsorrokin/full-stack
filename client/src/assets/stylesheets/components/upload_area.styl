::-webkit-file-upload-button
  cursor:pointer

.upload-area
  position: relative
  cursor: pointer

  input[type=file]
    cursor: pointer
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    z-index: 1
    opacity: 0

  &.btn
    overflow: hidden
    text-transform: uppercase
    font-size: 16px
    padding: 14px
    box-shadow: none
    background-color: transparent
    border: 2px solid $color-text
    color: $color-text
    trans('box-shadow')

    &:hover
      box-shadow: 0 6px 14px 0 rgba(0,0,0,0.1), 0 0px 2px 0 rgba(0,0,0,0.1)

    i
      font-size: 15px
      position: relative
      top: 1px
      margin-right: 11px

  .label-copy-wrap
    position: absolute
    left: 0
    top: 0
    width: 0
    height: 100%
    overflow: hidden
    trans('width')
    label
      padding: 14px
      width: 100%
      height: 100%
      display: block
      background-color: $color-text
      color: $color-white
