.card-wrap
  width: 320px
  padding-top: (100 / $card-ratio)%
  position: relative
  cursor: pointer

.card
  width: 100%
  height: 100%
  position: absolute
  top: 0
  left: 0


  .image, .shadow
    bg-cover()
    width: 100%
    height: 100%

  .image
    background-color: $color-text

  video
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    z-index: 10
    pointer-events: none
    outline: none
    backface-visibility: hidden

  .image-wrap, .shadow-wrap
    height: 100%
    will-change: transform
    backface-visibility: hidden
    transition: transform 4000ms cubic-bezier(0.03, 0.98, 0.52, 0.99) 0s
    position: relative
    z-index: 1

  .shadow-wrap
    width: 120%
    height: @width
    position: absolute
    top: 1vw
    left: 1vw
    opacity: 1
    z-index: 0
